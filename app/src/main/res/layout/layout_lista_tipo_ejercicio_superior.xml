<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/imagenRangoBrazo"
        android:layout_width="162.89dp"
        android:layout_height="162.89dp"
        android:src="@drawable/grupo_musculo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        />
    <TextView
        android:id="@+id/NombreTipoTren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="223dp"
        android:textColor="@color/Blue"
        android:text="Tren superior"
        android:fontFamily="@font/sf_pro"
        android:textSize="50dp"
        />
    <TextView
        android:id="@+id/NombreRango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="285dp"
        android:textColor="@color/Blue"
        android:text="Rango I"
        android:fontFamily="@font/sf_pro"
        android:textSize="30dp"
        />
    <ImageView
        android:id="@+id/imagenLineaRango"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/linea_rango"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="350dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecycleTipoEjerciciosSuperior"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="355dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>