<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/iphone_x_xs_11_pro__4">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/icon_awesome_arrow_left"
        />
    <Button
        android:id="@+id/atrasEJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="10dp"
        android:alpha="0"
        android:onClick="onClick"
        />
    <TextView
        android:id="@+id/nombDescanso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:textSize="30dp"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/Black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Toma agua y descansa"
        />
    <ImageView
        android:id="@+id/imagenDesc"
        android:background="@drawable/water"
        android:layout_width="324dp"
        android:layout_height="370dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="170dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cronometroDes"
        android:fontFamily="@font/sf_pro"
        android:layout_marginTop="540dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Blue"
        android:textSize="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro"
        android:layout_marginTop="650dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Black"
        android:textSize="24dp"
        android:text="Siguiente Ejercicio"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/SigEjer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro"
        android:layout_marginTop="680dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Blue"

        android:textSize="24dp"
        />
    <ImageView
        android:id="@+id/imagenSigEj"
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:layout_marginTop="645dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="250dp"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>