<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_x_xs_11_pro__50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/sf_pro"
        android:text="INGRESE SU ALTURA"
        android:textColor="@color/Black"
        android:textSize="30sp"
        android:layout_marginTop="205dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp" />
    <EditText
        android:inputType="number"
        android:id="@+id/edxAlturaRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="181"
        android:layout_marginTop="20dp"
        android:layout_marginRight="100dp"
        android:textColorHint="@color/Black"
        android:textColor="@color/Black"
        android:fontFamily="@font/sf_pro"
        android:textSize="100dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:hint="CM"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="190dp"
    android:textColorHint="@color/Grey"
    android:textColor="@color/Black"
    android:fontFamily="@font/sf_pro"
    android:textSize="60dp"
    />


    <Button

        android:id="@+id/btnFlechaAltura"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="546dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClick"
        android:alpha="0"
        />


    <ImageView
        android:background="@color/White"
        android:id="@+id/imageButtonFlechaDerAltura"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="546dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_awesome_arrow_right"
        />




</androidx.constraintlayout.widget.ConstraintLayout>