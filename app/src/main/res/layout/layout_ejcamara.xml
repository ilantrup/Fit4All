<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Grey">
    <ImageView
        android:id="@+id/abajoEj"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/abajo_ej_cam"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro"
        android:layout_marginTop="650dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Black"
        android:textSize="24dp"
        android:text="Ejercicio"
        android:layout_marginLeft="30dp"
        android:id="@+id/txtNombreEj"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cronometroEjCam"
        android:fontFamily="@font/sf_pro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/abajoEj"
        android:textColor="@color/Blue"
        android:textSize="40dp"
        />
    <TextView
        android:id="@+id/EjerCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro"
        android:layout_marginTop="680dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Blue"
        android:textSize="24dp"
        />
    <ImageView
        android:id="@+id/imagenEjCam"
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:layout_marginTop="645dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="250dp"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>