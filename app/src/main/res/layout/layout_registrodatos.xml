<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_x_xs_11_pro__52">
    <TextView
        android:id="@+id/FraseTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/sf_pro"
        android:text="Algunos datos personales"
        android:textColor="@color/Black"
        android:textSize="28sp"
        android:layout_marginTop="205dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="22dp" />

    <EditText
        android:id="@+id/edxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:fontFamily="@font/sf_pro"
        android:textColorHint="@color/Grey"
        android:textColor="@color/Black"
        android:textSize="20dp"
        android:layout_marginTop="95dp"
        android:layout_marginRight="260dp"
        app:layout_constraintTop_toBottomOf="@id/FraseTexto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <EditText
        android:id="@+id/edxSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/Black"
        android:textColorHint="@color/Grey"
        android:textSize="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="235dp"
        app:layout_constraintTop_toBottomOf="@id/FraseTexto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button

        android:id="@+id/btnFlechaDerRegistrodatos"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="546dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onClick"
        android:alpha="0"
        />


    <ImageView
        android:background="@color/White"
        android:layout_width="35dp"
        android:layout_height="42dp"
        android:layout_marginTop="546dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_awesome_arrow_right"
        />
</androidx.constraintlayout.widget.ConstraintLayout>